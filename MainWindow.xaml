<Window x:Class="ExamModule4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamModule4"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.8*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Grid.Row="0" Content="Получить данные" Width="200" Height="25" Click="GetDataFromApiClick"></Button>
        <Button Grid.Column="0" Grid.Row="1" Content="Отправить результат теста" Width="200" Height="25"  Click="PostDataToWordClick"></Button>

        <TextBlock Grid.Column="1" Grid.Row="0" TextAlignment="Center" Height="25" TextWrapping="Wrap" x:Name="GetDataBox"></TextBlock>
        <TextBlock Grid.Column="1" Grid.Row="1" TextAlignment="Center" Height="25" TextWrapping="Wrap" x:Name="ResultDataBox"></TextBlock>
    </Grid>
</Window>
